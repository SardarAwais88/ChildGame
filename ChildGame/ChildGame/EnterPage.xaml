<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChildGame.EnterPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry x:Name="EntryText"  Placeholder="EntryText"/>

            <Button HorizontalOptions="Center" Text="Speak" Clicked="Button_Clicked"/>
            <Slider MinimumTrackColor="Black"
MaximumTrackColor="DarkSlateGray"
ThumbColor="DarkSlateGray"
Minimum="0" Maximum="1" Value="1" x:Name="SliderVolume"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>